extends layout

block content 
    h1 Add Book 

    if errors 
        each error in errors 
            p(style='color: red') #{error.msg}

    //"#" -- id; "." -- class
    form(method="POST",action="/books/add")
       lable Title: 
       input(name='title', type='text')
       br
       br
       lable Author: 
       input(name='author', type='text')
       br
       br
       lable Pages: 
       input(name='pages', type='text')
       br
       br
       lable Genres: 
        for genre in genres
                input(name='genres',type='checkbox',value=genre)
                label=genre
       br
       br
       lable Rating: 
       input(name='rating', type='text')
       br
       br
       input(type="submit",value="submit")