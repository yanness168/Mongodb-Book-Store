extends layout

block content
  h1 Bookstore
  each book in books
    lable Title:
    a(href="/books/single/"+book.id) #{book.title}
    p Author: #{book.author}
    p ISBN-13: #{book.ISBN}
    p Pages: #{book.pages}
    p Rating: #{book.rating}
    p Genres: 
    ul 
    each genre in book.genres 
      li #{genre}
      br
    br